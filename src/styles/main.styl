body
  background #1b1b1b

#about
  p
    color orange

#repositories
  ul
    li
      a
        text-decoration none

        h2
          color green
          font-weight bold

        p
          color grey

#projects
  max-width 960px
  margin 0 auto
  ul
    display block
    text-align center
    li
      margin 10px
      overflow hidden
      display inline-block
      vertical-align top
      a
        color #5b007a
        width 300px
        height 199px
        position relative
        display block
        text-decoration none
        background-position center center
        background-repeat no-repeat
        background-size 300px 199px
        transition: background 1s ease-out;

        .bg
          overfow hidden
          position absolute
          top 0
          left 0
          background rgba(0,0,0,.7)
          width 100%
          height 100%
          transition: background 1s ease-out;

          .text
            position absolute
            top 0
            left -100%
            width 100%
            transition: left .4s ease-out;

        &:hover
          background-size 350px 232px

          .bg
            background rgba(0,0,0,.5)

            .text
              left 0

