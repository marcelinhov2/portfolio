@import url(http://fonts.googleapis.com/css?family=Oswald);

body
  background #000

ng-view
  display block
  width 100%
  height 100%

#about
  max-width 960px
  margin 0 auto
  text-align center
  h1
    background:url("/images/logo.jpg") no-repeat top center
    width 100%
    height 91px
    text-indent -9999px

  p
    margin-top 10px
    font-family 'Oswald', sans-serif
    letter-spacing 1px
    font-size 16px
    line-height 20px
    color #e6e6e6

    a
      margin-top 10px
      display block
      color #a6c53c

#repositories
  ul
    li
      a
        text-decoration none

        h2
          color green
          font-weight bold

        p
          color grey

#projects
  max-width 960px
  margin 0 auto
  ul
    display block
    text-align center
    li
      margin 10px
      overflow hidden
      display inline-block
      vertical-align top
      a
        color #5b007a
        width 300px
        height 199px
        position relative
        display block
        text-decoration none
        background-position center center
        background-repeat no-repeat
        background-size 300px 199px
        transition: background 1s ease-out;

        .bg
          overfow hidden
          position absolute
          top 0
          left 0
          background rgba(0,0,0,.7)
          width 100%
          height 100%
          transition: background 1s ease-out;

          .text
            display table
            position absolute
            top 0
            left -100%
            width 100%
            height 100%
            padding 0 20px
            transition: left .4s ease-out
            -webkit-box-sizing border-box
            -moz-box-sizing border-box
            box-sizing border-box
            
            span
              display table-cell
              vertical-align middle

        &:hover
          background-size 350px 232px

          .bg
            background rgba(0,0,0,.5)

            .text
              left 0

#footer
  p
    color #a6c53c